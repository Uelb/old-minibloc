= content_for :head do 
  %h2.pull-left
    %i.icon-cloud-upload
    Create a new message
.col-md-12
  .widget.wgreen
    .widget-head
      .pull-left Send a new message
      .clearfix
    .widget-content
      .padd
        / Form starts.
        = form_for @message, url: {action: :create}, html: {class: "form-horizontal"} do |f|
          .form-group
            = f.label :recipient, class: ["col-lg-4", "control-label"]
            .col-lg-8
              = f.telephone_field :recipient, placeholder: "Recipient phone number", class: "form-control"
          .form-group
            = f.label :body, class: ["col-lg-4", "control-label"]
            .col-lg-8
              = f.text_area :body, placeholder: "The body of the message...", class: "form-control"
          .form-group
            .col-lg-offset-1.col-lg-9
              = f.submit t('messages.create'), class: ["btn", "btn-primary"]